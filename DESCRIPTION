Package: astronomR
Type: Package
Title: Cosmic Insights: Statistical Frameworks for Astronomers in R
Version: 0.1.0
Authors@R: c(
    person("Samrit", "Pramanik", email = "samrit.2442@gmail.com", role = c("aut", "cre"), 
           comment = c(ORCID = "0000-0003-2055-9007")),
